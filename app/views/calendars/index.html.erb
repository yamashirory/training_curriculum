<div>
  <%= form_with model: @plan, url: calendars_path, class: 'form' do |f| %>
    <%= f.label :日付を選択 %>
    <%= f.date_field %>
    <%= f.label :予定を入力 %>
    <%= f.text_field :plan %>
    <%= f.submit '保存' %>
  <% end %>
</div>
<div class=calendar>
    <% @week_days.each do |day| %>
        <div class='date'>
          <% day[:month] %>/<% day[:date] %>
        </div>
        <ul class='content'>
        <% if day[:plans].length != 0 %>
          <% day[:plans].each do |plan| %>
            <li class='plan-list'>・<%= plan %></li>
          <% end %>
        <% end %>
        </ul>
    <% end %>
</div>